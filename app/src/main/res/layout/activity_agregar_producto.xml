<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgregarProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#BDB3B3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Ingreso_Nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#323232"
            android:ems="10"
            android:hint="Nombre del producto"
            android:inputType="text"
            android:labelFor="@+id/Titulo_Nombre"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="#323232"
            android:textColorHint="#7D7D7D"
            android:textSize="20sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/Ingreso_Categoria"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#323232"
            android:ems="10"
            android:hint="CategorÃ­a"
            android:inputType="text"
            android:labelFor="@+id/Titulo_Categoria"
            android:textAlignment="center"
            android:textColor="#323232"
            android:textColorHint="#7D7D7D"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/Ingreso_Precio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#323232"
            android:ems="10"
            android:hint="Precio"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#323232"
            android:textColorHint="#7D7D7D"
            android:textSize="20sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/Boton_Guardar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#684C4C"
            android:onClick="Guardar"
            android:text="Guardar producto"
            android:textColor="#E6E6E6"
            android:textSize="18sp"
            app:rippleColor="#684C4C" />
    </LinearLayout>
</LinearLayout>